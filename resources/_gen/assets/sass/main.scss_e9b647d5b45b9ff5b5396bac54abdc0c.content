.center {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column; }

.title {
  font-size: var(--title);
  font-weight: bold; }

body {
  margin: 0 auto;
  max-width: var(--main-width);
  padding-left: 1.2rem;
  padding-right: 1.2rem;
  background-color: var(--background);
  color: var(--text);
  font-size: var(--font-body); }

header {
  font-family: "Literata";
