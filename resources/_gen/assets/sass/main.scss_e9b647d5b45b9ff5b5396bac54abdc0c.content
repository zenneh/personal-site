  margin-bottom: var(--header-bottom-gap);
  height: var(--header-height); }

nav ul {
  display: flex;
  gap: 1rem; }

nav a.active {
  font-weigth: bold;
  color: var(--primary); }

footer {
  height: var(--footer-height);
  font-size: var(--font-label);
  display: flex;
  justify-content: center;
  align-items: center; }
  footer a,
  footer b {
    margin-left: .2rem;
    margin-right: .2rem;
    color: var(--primary); }

hr {
  background-color: var(--background-600);
  height: 1px;
  margin-top: 0.1rem;
  margin-bottom: 0.4rem; }

/* Main Content styling */
main {
  min-height: var(--content-height);
  /* Bold */
  /* Link */
  /* Code blocks */ }
  main strong {
    color: var(--text); }
  main a {
    color: var(--primary); }
  main pre {
    padding: .6em 1em;
    border-radius: var(--border);
    font-family: var(--font-family-mono); }

/* Content specific styling */
.content a {
  position: relative; }
  .content a::before {
    content: "";
    position: absolute;
    bottom: -.2rem;
    width: 0%;
    height: 2px;
    border-radius: var(--border);
    background-color: var(--primary);
    transition: width 0.2s ease; }
  .content a:hover::before {
    width: 100%;
    transition: width 0.2s ease; }

.content h1 {
  margin-bottom: calc(var(--font-h1) / 4);
  font-size: var(--font-h1); }

.content h2 {
  margin-bottom: calc(var(--font-h2) / 4);
  font-size: var(--font-h2); }

.content h3 {
  margin-bottom: calc(var(--font-h3) / 4);
  font-size: var(--font-h3); }

.content h4 {
  margin-bottom: calc(var(--font-h4) / 4);
  font-size: var(--font-h4); }

.content h5 {
  margin-bottom: calc(var(--font-h5) / 4);
  font-size: var(--font-title); }

.content pre {
  margin-bottom: calc(var(--font-body) / 2); }

.content a,
.content p {
  margin-bottom: calc(var(--font-body)); }

.socials {
  display: flex;
  gap: 1.2rem;
  align-items: center;
  justify-content: center; }
  .socials a {
    display: flex;
    gap: .6rem;
    align-items: center;
    padding: .2rem .6rem;
    fill: var(--primary);
    opacity: .8; }
    .socials a:hover {
      opacity: 1; }

.svg-container {
  width: 20px;
  height: 20px;
  overflow: hidden; }
  .svg-container svg {
    height: 100%;
    width: 100%; }

.posts .title {
  margin-bottom: .6rem; }

.posts > ul {
  display: flex;
  flex-direction: column;
  gap: .8rem; }

.post {
  display: flex;
  gap: 3rem;
  font-size: var(--font-body);
  border-radius: var(--border);
  margin: .2rem 0; }
  .post .post-content {
    flex: 1;
    display: flex;
    justify-content: space-between; }
    .post .post-content > a {
      text-decoration: underline; }

.tags {
  display: flex;
  flex-direction: row;
  gap: .6rem; }

.tag {
  padding: .2rem .4rem;
  border-radius: var(--border);
  border: 0.1rem solid var(--primary);
  font-size: var(--font-label);
  color: var(--primary); }
  .tag:hover {
    background-color: var(--primary);
    color: var(--background); }

.banner {
  aspect-ratio: 10/4;
  width: 100%;
  object-fit: cover;
  border-radius: var(--border);
  margin-bottom: var(--font-body);
  background-color: var(--background-600); }
